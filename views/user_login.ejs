<%- include('partials/head')%>
        <form action="/login" method="POST" class="forms">
            <h2>Login</h2>
            <fieldset class="info-fields">
                <label for="username">
                    Username
                    <input type="text" name="username" required>
                </label>
                <label for="password">
                    Password
                    <input type="password" name="password" required>
                </label>
                <p class="error-messages"><%= message %></p>
            </fieldset>
            <fieldset>
                <input type="submit" value="Sign In" class="submit-button">
                <a href="/" class="cancel-button">Cancel</a>
            </fieldset>
        </form>
    </body>
</html>